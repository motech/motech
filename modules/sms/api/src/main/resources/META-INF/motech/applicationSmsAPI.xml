<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
       ">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.sms.api"/>

    <bean id="smsService" class="org.motechproject.sms.api.service.SmsServiceImpl"/>

    <bean id="smsAuditService" class="org.motechproject.sms.api.service.SmsAuditServiceImpl"/>

    <bean id="smsApiSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="configFiles">
            <list>
                <value>classpath:sms.properties</value>
            </list>
        </property>
        <property name="moduleName" value="sms-api"/>
    </bean>

    <bean class="org.motechproject.security.annotations.SecurityAnnotationBeanPostProcessor">
        <property name="moduleName" value="sms-api"/>
    </bean>

    <bean id="smsDBConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-sms-audit"/>
    </bean>

</beans>
