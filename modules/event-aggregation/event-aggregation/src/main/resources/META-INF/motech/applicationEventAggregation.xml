<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        ">

    <context:annotation-config />
    <mvc:annotation-driven />
    <context:component-scan base-package="org.motechproject.event.aggregation" />
    <context:component-scan base-package="org.motechproject.event.aggregation.web" />
    <context:component-scan base-package="javax.validation" />

    <bean id="eventAggregationSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="event-aggregation"/>
    </bean>

    <bean id="eventAggregationDbConnector" factory-bean="eventAggregationSettings" factory-method="getConnector">
        <constructor-arg value="motech-event-aggregation"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>
</beans>
