<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.ivr"/>
    <mvc:annotation-driven/>


    <bean id="platformIVRDbConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-ivr"/>
    </bean>


    <!-- get a couchdb connector to access motech's datastore -->
    <bean id="callLogDbConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-calllog"/>
    </bean>

</beans>
