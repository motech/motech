<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/voxeoResources.xml"/>

    <osgi:service id="ivrServiceOsgi" auto-export="interfaces" ref="VoxeoIVRService" interface="org.motechproject.ivr.service.contract.IVRService">
        <osgi:service-properties>
            <entry key="IvrProvider" value="Voxeo"/>
            <entry key="Host" value="localhost"/>
        </osgi:service-properties>
    </osgi:service>


    <osgi:reference id="eventRelay" interface="org.motechproject.event.listener.EventRelay"/>

    <osgi:reference id="couchDbManager" interface="org.motechproject.commons.couchdb.service.CouchDbManager"/>

    <osgi:reference id="platformSettingsServiceOsgi" interface="org.motechproject.server.config.service.PlatformSettingsService"/>

</beans>
