    <context:annotation-config/>

    
    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="url" value="../hub/resources/index.html"/>
        <constructor-arg name="moduleName" value="hub"/>
        <constructor-arg name="angularModules">
            <list>
                <value>hub</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../hub/resources/messages/"/>
            </map>
        </constructor-arg>
    </bean>
