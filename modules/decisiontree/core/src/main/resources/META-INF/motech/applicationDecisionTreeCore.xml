<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.decisiontree.core"/>

    <bean id="decissionTreeCoreSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="decisiontree-core"/>
    </bean>

    <bean id="treesDatabase" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="trees"/>
    </bean>

    <bean id="treeDao" class="org.motechproject.decisiontree.core.repository.AllTrees">
        <constructor-arg ref="treesDatabase"/>
    </bean>


</beans>
