<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.decisiontree.server"/>

    <bean id="decissionTreeSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="decisiontree-server"/>
    </bean>

    <bean id="flowSession" factory-bean="decissionTreeSettings" factory-method="getConnector">
        <constructor-arg value="flowSession"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <bean id="callDetailRecord" factory-bean="decissionTreeSettings" factory-method="getConnector">
        <constructor-arg value="callDetailRecords"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <bean id="treeEventProcessor" class="org.motechproject.decisiontree.server.service.TreeEventProcessor"/>

    <bean class="org.motechproject.decisiontree.core.TreeNodeLocator"/>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

</beans>
