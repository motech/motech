<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--<context:property-placeholder location="classpath*:motech-web-security.properties"/>
        todo is this used? if yes use properties instead of placeholder -->

    <bean id="webSecuritySettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="web-security"/>
    </bean>

    <bean id="webSecurityDbConnector" factory-bean="webSecuritySettings" factory-method="getConnector">
        <constructor-arg value="motech-web-security"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.security"/>
</beans>
