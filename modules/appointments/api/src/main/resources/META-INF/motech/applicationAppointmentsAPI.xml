<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.appointments.api"/>
    <context:component-scan base-package="org.motechproject.server.config"/>

    <bean id="appointmentsApiSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="appointments-api"/>
    </bean>

    <bean id="appointmentsDatabase" factory-bean="appointmentsApiSettings" factory-method="getConnector">
        <constructor-arg value="motech-appointments"/>
        <constructor-arg value="couchdb.properties"/>
    </bean>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

</beans>
