<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <context:annotation-config />
    <context:component-scan base-package="org.motechproject.commcare" />

    <mvc:annotation-driven/>

    <bean id="commcareAPISettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="configFiles">
            <list>
                <value>classpath:commcareUserApi.properties</value>
                <value>classpath:caseEventStrategy.properties</value>
            </list>
        </property>
        <property name="moduleName" value="commcare-api"/>
    </bean>

    <bean id="multiThreadedHttpConnectionManager" class="org.apache.commons.httpclient.MultiThreadedHttpConnectionManager" />

    <bean id="commonsHttpClient" class="org.apache.commons.httpclient.HttpClient">
        <constructor-arg ref="multiThreadedHttpConnectionManager" />
    </bean>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

</beans>