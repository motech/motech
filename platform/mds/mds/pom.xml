                    <include>datanucleus_schema.properties</include>
                    <include>swagger.properties</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>datanucleus_data.properties</exclude>
                    <exclude>datanucleus_schema.properties</exclude>
                    <exclude>swagger.properties</exclude>
